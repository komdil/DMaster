<Window x:Class="DMaster.Views.ComplatedMessage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DMaster.Views"
        mc:Ignorable="d"
              WindowStyle="None"
            WindowStartupLocation="CenterScreen"
            Width="400" Height="500"
        >
    <DockPanel Margin="16">
        <Button Click="Button_Click" DockPanel.Dock="Bottom" Style="{StaticResource MaterialDesignRaisedAccentButton}" Margin="20" 
                    ToolTip="Close Message dialog">
            OK
        </Button>
        <ScrollViewer   >
            <TextBlock Foreground="Green"  x:Name="Message" 
                   Margin="0 6 0 0"
                   FontSize="18" Grid.Row="0"/>
        </ScrollViewer>


    </DockPanel>
</Window>
