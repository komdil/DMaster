<Window x:Class="DMaster.Views.YesNoMessage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DMaster.Views"
        mc:Ignorable="d"
        WindowStyle="None"
         Width="400" Height="500">
    <DockPanel Margin="16">
        <DockPanel DockPanel.Dock="Bottom">
            <Button  DockPanel.Dock="Right" Style="{StaticResource MaterialDesignRaisedAccentButton}" Margin="20" 
                    ToolTip="Cancel" Click="Button_Click_1">
                Cancel
            </Button>
            <Button Click="Button_Click" DockPanel.Dock="Right" Style="{StaticResource MaterialDesignRaisedAccentButton}" Margin="20" 
                    ToolTip="OK">
                OK
            </Button>
           
            <Grid></Grid>
        </DockPanel>
        <ScrollViewer   >
            <TextBlock Foreground="Red" TextWrapping="WrapWithOverflow" x:Name="Message" 
                   Margin="0 6 0 0"
                   FontSize="18" Grid.Row="0"/>
        </ScrollViewer>


    </DockPanel>
</Window>
